<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Formulário de Compra - PetMania</title>
  <link rel="shortcut icon" type="image/png" href="/img/logo.png" />
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background-image: url("img/fundo.jpg");
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }

    section {
      position: relative;
      max-width: 400px;
      background-color: rgba(255, 255, 255, 0.1);
      border: 2px solid rgba(255, 255, 255, 0.5);
      border-radius: 20px;
      backdrop-filter: blur(10px);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem 3rem;
      flex-direction: column;
    }

    h1 {
      font-size: 1.8rem;
      color: #fff;
      text-align: center;
      margin-bottom: 1rem;
    }

    .inputbox {
      position: relative;
      margin: 15px 0;
      max-width: 310px;
      border-bottom: 2px solid #fff;
    }

    .inputbox label {
      position: absolute;
      top: 50%;
      left: 5px;
      transform: translateY(-50%);
      color: #fff;
      font-size: 0.9rem;
      pointer-events: none;
      transition: all 0.3s ease-in-out;
    }

    input:focus ~ label,
    input:valid ~ label {
      top: -8px;
      font-size: 0.75rem;
      color: #ddd;
    }

    .inputbox input {
      width: 100%;
      height: 45px;
      background: transparent;
      border: none;
      outline: none;
      font-size: 0.9rem;
      padding: 0 35px 0 5px;
      color: #fff;
    }

    .inputbox ion-icon {
      position: absolute;
      right: 8px;
      color: #fff;
      font-size: 1rem;
      top: 15px;
    }

    .btn {
      margin-top: 10px;
      width: 100%;
      height: 40px;
      border-radius: 40px;
      background-color: rgba(255, 255, 255, 1);
      border: none;
      outline: none;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.4s ease;
      user-select: none;
    }

    .btn:hover:enabled {
      background-color: rgba(255, 255, 255, 0.7);
    }

    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <section>
    <form id="pixForm">
      <h1>Se cadastre antes de realizar a compra!</h1>

      <div class="inputbox">
        <ion-icon name="person-outline"></ion-icon>
        <input type="text" id="nome" required />
        <label>Nome Completo</label>
      </div>

      <div class="inputbox">
        <ion-icon name="card-outline"></ion-icon>
        <input
          type="text"
          id="cpf"
          required
          maxlength="14"
          pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
          title="Digite um CPF válido (ex: 123.456.789-00)"
        />
        <label>CPF</label>
      </div>

      <div class="inputbox">
        <ion-icon name="call-outline"></ion-icon>
        <input
          type="tel"
          id="telefone"
          required
          maxlength="15"
          pattern="\(?\d{2}\)?\s?\d{4,5}-?\d{4}"
          title="Digite um telefone válido (ex: (12) 34567-8901)"
        />
        <label>Telefone</label>
      </div>

      <div class="inputbox">
        <ion-icon name="mail-outline"></ion-icon>
        <input type="email" id="email" required />
        <label>Email</label>
      </div>

      <div class="inputbox">
        <ion-icon name="home-outline"></ion-icon>
        <input type="text" id="rua" required />
        <label>Rua</label>
      </div>

      <div class="inputbox">
        <ion-icon name="construct-outline"></ion-icon>
        <input type="text" id="numero" required pattern="\d+" title="Digite um número válido" />
        <label>Número</label>
      </div>

      <div class="inputbox">
        <ion-icon name="business-outline"></ion-icon>
        <input type="text" id="bairro" required />
        <label>Bairro</label>
      </div>

      <div class="inputbox">
        <ion-icon name="location-outline"></ion-icon>
        <input type="text" id="cidade" required />
        <label>Cidade</label>
      </div>

      <div class="inputbox">
        <ion-icon name="flag-outline"></ion-icon>
        <input type="text" id="estado" required maxlength="2" pattern="[A-Za-z]{2}" title="Digite a sigla do estado (ex: SP)" />
        <label>Estado</label>
      </div>

      <div class="inputbox">
        <ion-icon name="mail-outline"></ion-icon>
        <input
          type="text"
          id="cep"
          required
          pattern="\d{5}-?\d{3}"
          title="Digite um CEP válido (ex: 12345-678)"
        />
        <label>CEP</label>
      </div>

      <button
        type="submit"
        class="btn"
        id="btnEnviar"
        title="Enviar formulário"
      >
        Enviar
      </button>

      <button type="button" class="btn" onclick="window.location.href='/animais'">
        Voltar
      </button>
    </form>
  </section>

  <script>
    // Máscara CPF
    const cpfInput = document.getElementById('cpf');
    cpfInput.addEventListener('input', function (e) {
      let v = e.target.value.replace(/\D/g, '');
      if (v.length > 11) v = v.slice(0, 11);
      v = v.replace(/(\d{3})(\d)/, '$1.$2');
      v = v.replace(/(\d{3})(\d)/, '$1.$2');
      v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
      e.target.value = v;
    });

    // Máscara Telefone
    const telInput = document.getElementById('telefone');
    telInput.addEventListener('input', function (e) {
      let v = e.target.value.replace(/\D/g, '');
      if (v.length > 11) v = v.slice(0, 11);

      if (v.length > 10) {
        v = v.replace(/^(\d{2})(\d{5})(\d{0,4}).*/, '($1) $2-$3');
      } else if (v.length > 5) {
        v = v.replace(/^(\d{2})(\d{4})(\d{0,4}).*/, '($1) $2-$3');
      } else if (v.length > 2) {
        v = v.replace(/^(\d{2})(\d{0,5})/, '($1) $2');
      } else {
        v = v.replace(/^(\d*)/, '($1');
      }
      e.target.value = v;
    });

    const form = document.getElementById("pixForm");

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      if (form.checkValidity()) {
        const dados = {
          nome: document.getElementById("nome").value.trim(),
          cpf: document.getElementById("cpf").value.trim(),
          telefone: document.getElementById("telefone").value.trim(),
          email: document.getElementById("email").value.trim(),
          rua: document.getElementById("rua").value.trim(),
          numero: document.getElementById("numero").value.trim(),
          bairro: document.getElementById("bairro").value.trim(),
          cidade: document.getElementById("cidade").value.trim(),
          estado: document.getElementById("estado").value.trim(),
          cep: document.getElementById("cep").value.trim(),
        };
        localStorage.setItem("dadosCliente", JSON.stringify(dados));
        alert("Dados enviados com sucesso!");
        // Redireciona direto para forma de pagamento
        window.location.href = "/formaPagamento";
      } else {
        alert("Por favor, preencha todos os campos corretamente.");
      }
    });
  </script>
</body>
</html>
