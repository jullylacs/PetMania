<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
	<hr>
	<h2>Lista de Animais</h2>
	<a class="btn btn-success" href="/admin/animais/new">Cadastrar novo animal</a>
	<hr>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nome</th>
				<th>Descrição</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			<% animais.forEach(animal => { %>
				<tr>
					<td><%= animal.id %></td>
					<td><%= animal.nome %></td>
					<td><%= animal.descricao %></td>
					<td>
						<a href="/admin/animais/edit/<%= animal.id %>" class="btn btn-warning btn-sm">Editar</a>
						<form method="POST" action="/animais/delete" style="display:inline">
							<input type="hidden" name="id" value="<%= animal.id %>">
							<button class="btn btn-danger" onclick="confirmarDelecao(event, this.form)">Deletar</button>
						</form>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>

<%- include ("../../partials/footer.ejs") %>

<script>
	function confirmarDelecao(event, form) {
		event.preventDefault();
		var decision = confirm("Você quer deletar este animal?")
		if(decision) {
			form.submit();
		}
	}
</script>
