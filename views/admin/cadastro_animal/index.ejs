<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <h2>Agendamentos de Visita</h2>
    <a class="btn btn-success" href="/admin/cadastros_animais/new">Criar novo agendamento</a>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Pet</th>
                <th>Dia</th>
                <th>Hora</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% cadastros.forEach(c => { %>
                <tr>
                    <td><%= c.id %></td>
                    <td><%= c.nome %></td>
                    <td><%= c.Email %></td>
                    <td><%= c.Pet %></td>
                    <td><%= c.DiaVisita ? c.DiaVisita.toISOString().slice(0,10) : '' %></td>
                    <td><%= c.Hora %></td>
                    <td>
                        <a href="/admin/cadastros_animais/edit/<%= c.id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form method="POST" action="/cadastros_animais/delete" style="display:inline">
                            <input type="hidden" name="id" value="<%= c.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs") %>
