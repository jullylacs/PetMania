<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/cadastros/new">Criar novas categorias</a>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% cadastros.forEach(cadastro => { %>
                <tr>
                    <td><%= cadastro.id %></td>
                    <td><%= cadastro.nome %></td>
                    <td><%= cadastro.email %></td>
                    <td>
                        
                        <a href="/admin/cadastros/editar/<%= cadastro.id %>" class="btn btn-warning btn-sm">Editar</a>

                        <form method="POST" action="/cadastros/delete" style="display:inline">
                            <input type="hidden" name="id" value="<%= cadastro.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs") %>
