                            <a href="#booking" class="btn" data-pet="Mary">Marcar visita</a>
                        </div>
                    </article>
                </div>
            </div>
        </section>

        <!-- Mais gatos para adoção -->
        <section class="rooms">
            <div class="container">
                <div class="room-grid">
